<%- include("../../views/partials/user/header.ejs") %>

<div class="container d-flex align-items-center justify-content-center min-vh-100 py-4">
  <div class="w-100" style="max-width: 900px;">

    <!-- Grid of Options -->
    <div class="row g-3">
      <!-- User Details -->
      <div class="col-12 col-sm-6 col-lg-4">
        <a href="/userDetails" class="d-flex align-items-center p-3 bg-white rounded shadow-sm text-decoration-none text-dark">
          <i class="fas fa-user fs-4 text-primary me-3"></i>
          <span class="fw-medium">User Details</span>
        </a>
      </div>

      <!-- Edit User Details -->
      <div class="col-12 col-sm-6 col-lg-4">
        <a href="/editUserProfile" class="d-flex align-items-center p-3 bg-white rounded shadow-sm text-decoration-none text-dark">
          <i class="fas fa-user-edit fs-4 text-primary me-3"></i>
          <span class="fw-medium">Edit Personal Details</span>
        </a>
      </div>

      <!-- Change Email -->
      <div class="col-12 col-sm-6 col-lg-4">
        <a href="/change-email" class="d-flex align-items-center p-3 bg-white rounded shadow-sm text-decoration-none text-dark">
          <i class="fas fa-envelope fs-4 text-primary me-3"></i>
          <span class="fw-medium">Change Email</span>
        </a>
      </div>

      <!-- Change Password -->
      <div class="col-12 col-sm-6 col-lg-4">
        <a href="/change-password" class="d-flex align-items-center p-3 bg-white rounded shadow-sm text-decoration-none text-dark">
          <i class="fas fa-key fs-4 text-primary me-3"></i>
          <span class="fw-medium">Change Password</span>
        </a>
      </div>

      <!-- Cart -->
      <div class="col-12 col-sm-6 col-lg-4">
        <a href="/cart" class="d-flex align-items-center p-3 bg-white rounded shadow-sm text-decoration-none text-dark">
          <i class="fas fa-shopping-cart fs-4 text-primary me-3"></i>
          <span class="fw-medium">Cart</span>
        </a>
      </div>

      <!-- Wishlist -->
      <div class="col-12 col-sm-6 col-lg-4">
        <a href="/wishlist" class="d-flex align-items-center p-3 bg-white rounded shadow-sm text-decoration-none text-dark">
          <i class="fas fa-heart fs-4 text-primary me-3"></i>
          <span class="fw-medium">Wishlist</span>
        </a>
      </div>

      <!-- Orders -->
      <div class="col-12 col-sm-6 col-lg-4">
        <a href="/orders" class="d-flex align-items-center p-3 bg-white rounded shadow-sm text-decoration-none text-dark">
          <i class="fas fa-shopping-bag fs-4 text-primary me-3"></i>
          <span class="fw-medium">Orders</span>
        </a>
      </div>

      <!-- Wallet -->
      <div class="col-12 col-sm-6 col-lg-4">
        <a href="/wallet" class="d-flex align-items-center p-3 bg-white rounded shadow-sm text-decoration-none text-dark">
          <i class="fas fa-wallet fs-4 text-primary me-3"></i>
          <span class="fw-medium">Wallet</span>
        </a>
      </div>

      <!-- Address Management -->
      <div class="col-12 col-sm-6 col-lg-4">
        <a href="/address" class="d-flex align-items-center p-3 bg-white rounded shadow-sm text-decoration-none text-dark">
          <i class="fas fa-map-marker-alt fs-4 text-primary me-3"></i>
          <span class="fw-medium">Address Management</span>
        </a>
      </div>
    </div>
  </div>
</div>

