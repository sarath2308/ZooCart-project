<!-- Order Actions -->
<div class="mt-3 d-flex flex-column gap-2">
    <% if (orderData.status !== 'cancelled') { %>
        <button class="btn cancel-btn" id="cancel-order">Cancel Order</button>
    <% } %>
   
    
    <!-- Dropdown for cancellation reason (Hidden by default) -->
    <div id="cancel-reason-section" class="mt-2 d-none">
        <select class="form-select" id="cancel-reason">
            <option value="">Select Reason</option>
            <option value="Changed my mind">Changed my mind</option>
            <option value="Found a better deal">Found a better deal</option>
            <option value="Ordered by mistake">Ordered by mistake</option>
            <option value="Other">Other (Specify below)</option>
        </select>

        <!-- Textbox for other reason (Hidden initially) -->
        <input type="text" id="other-reason" class="form-control mt-2 d-none" placeholder="Enter your reason">
        
        <button class="btn btn-danger mt-2" id="confirm-cancel">Submit Cancellation</button>
    </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function () {
    const cancelOrderBtn = document.getElementById("cancel-order");
    const cancelReasonSection = document.getElementById("cancel-reason-section");
    const cancelReasonDropdown = document.getElementById("cancel-reason");
    const otherReasonInput = document.getElementById("other-reason");
    const confirmCancelBtn = document.getElementById("confirm-cancel");

    // Show dropdown when cancel is clicked
    cancelOrderBtn.addEventListener("click", function () {
        cancelReasonSection.classList.toggle("d-none");
    });

    // Show/hide textbox based on selected reason
    cancelReasonDropdown.addEventListener("change", function () {
        if (this.value === "Other") {
            otherReasonInput.classList.remove("d-none");
        } else {
            otherReasonInput.classList.add("d-none");
        }
    });

    // Handle cancellation submission
    confirmCancelBtn.addEventListener("click", function () {
        const selectedReason = cancelReasonDropdown.value;
        const otherReason = otherReasonInput.value.trim();
        
        if (!selectedReason) {
            alert("Please select a reason for cancellation.");
            return;
        }

        if (selectedReason === "Other" && !otherReason) {
            alert("Please specify your reason.");
            return;
        }

        // Send cancellation request (Modify as needed)
        console.log("Cancellation Reason:", selectedReason === "Other" ? otherReason : selectedReason);
        alert("Your order has been cancelled.");
    });
});
</script>


