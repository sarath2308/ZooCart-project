                        <h5>
                          <%= ad.name %>
                          <% if (ad.default) { %>
                            <span class="default-badge">Default</span>
                          <% } %>
                        </h5>
                        <p style="color: grey;"><%= ad.addressType %></p>
                        <p><%= ad.city %>, <%= ad.landMark %>, <%= ad.state %></p>
                        <p>Pin: <%= ad.pincode %></p>
                        <p>Phone: <%= ad.phone %></p>
                        <p>Alt Phone: <%= ad.altPhone %></p>
                      </div>
                    </div>
                  <% }); %>
